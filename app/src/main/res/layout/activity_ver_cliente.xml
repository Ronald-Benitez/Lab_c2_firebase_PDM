<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verCliente"
    android:orientation="vertical"
    android:padding="25dp"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente #" />

        <TextView
            android:id="@+id/textViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del cliente" />

    <EditText
        android:id="@+id/NombreClientetxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginBottom="25dp"

        />

    <Button
        android:id="@+id/botonActulizarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDITAR CLIENTE"
        android:layout_marginBottom="10dp"
        android:onClick="btonEditarCliente"/>

    <Button
        android:id="@+id/botonEliminarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ELIMINAR CLIENTE"
        android:layout_marginTop="25dp"
        android:onClick="btonEliminarCliente"/>
    <TextView
        android:id="@+id/txtautosAlquyilados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Autos alquilados"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textSize="16sp" />
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/vehiculosDeUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>